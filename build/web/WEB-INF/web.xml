<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.servlet.LoginHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/LoginHandler</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TeleIndication</servlet-name>
        <servlet-class>com.servlet.TeleIndicationHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TeleIndication</servlet-name>
        <url-pattern>/TeleIndication</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TeleMeasurand</servlet-name>
        <servlet-class>com.servlet.TeleMeasurandHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TeleMeasurand</servlet-name>
        <url-pattern>/TeleMeasurand</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>dynamictankvalue</servlet-name>
        <servlet-class>com.servlet.DynamicTank</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dynamictankvalue</servlet-name>
        <url-pattern>/dynamicvalue.xml</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>view_ind</servlet-name>
        <servlet-class>com.servlet.ViewTeleInd</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>view_ind</servlet-name>
        <url-pattern>/View.xml</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>view_mea</servlet-name>
        <servlet-class>com.servlet.ViewTeleMea</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>view_mea</servlet-name>
        <url-pattern>/ViewMea.xml</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
